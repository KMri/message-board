<%= form_for(@message, :html => {:class => "form-horizontal"}) do |f| %>
  <%# 入力チェック %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  <%# フォーム %>
  <div class="form-group">
    <div class="col-sm-2">
      名前:
    </div>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control", :placeholder => "名前" %>
    </div>
  </div>
  <br />
  <div class="form-group">
    <div class="col-sm-2">
      年齢:
    </div>
    <div class="col-sm-10">
      <%= f.number_field :age, :class => "form-control", :placeholder => "年齢" %>
    </div>
  </div>
  <br />
  <div class="form-group">
    <div class="col-sm-2">
      内容:
    </div>
    <div class="col-sm-10">
      <%= f.text_area :body, :class =>"form-control", :placeholder => "内容" %>
    </div>
  </div>
  <br />
  <div class="text-center">
    <%= f.submit class: "btn btn-sm btn-primary" %>
  </div>
<% end %>


<style type="text/css">
/*中央寄せ*/
textarea {
  vertical-align: middle;
}
</style>